{% extends 'base.html.twig' %}

{% block body %} 
    <h1>Liste des articles</h1>
    <a href="{{ path('app_blog_new') }}" class="btn btn-success">Ajouter un article</a>
    <div class="row">
        {% for article in articles %}
            <div class="col">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ article.title }}</h5>
                        <p class="card-text">
                            {{ article.content }}
                        </p>
                        <p class="card-text text-end fs-6">{{ article.publisedAt != null ? article.publisedAt |date("d/m/Y H:i:s") }}</p>
                        <a href="{{ path('app_blog_article', {slug: article.slug}) }}" class="btn btn-primary">Voir plus</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}